<div class="container w-80">

<!--    <#% if @user.host == true %>
 -->

  <h2 id="bookings-index-title">Les événements que vous organisez</h2>

  <div class="booking-list">
    <div class="row booking-details-title d-flex justify-content-start">
      <h3 class="col mb-3">Statut</h3>
      <h3 class="col mb-3">Espace</h3>
      <h3 class="col mb-3">Hôte</h3>
      <h3 class="col mb-3">Description</h3>
      <h3 class="col mb-3"> Date</h3>
      <h3 class="col"></h3>
    </div>
      <% if @bookings %>
        <% @bookings.each do |booking| %>
        <div class="row booking-details d-flex mb-3">
            <div class="col status">
              <% if booking.status == "accepted" %>
                <p> Acceptée</p>
              <% elsif booking.status == "refused" %>
                <p> Refusée</p>
              <% else %>
                <p>En attente</p>
              <% end %>
            </div>
            <div class="col space-name"> <p><%= booking.space.name %></p></div>
            <div class= "col space host"> <p><%= booking.space.user.first_name %> <%= booking.space.user.last_name %> </p></div>
            <div class="col event-description"> <p><%= booking.description.truncate(50, separator: /\s/) %></p></div>
            <div class="col date"> <p><%= booking.date %> </p></div>
            <%= link_to "Annuler", booking_path(booking), method: :delete, class: 'col btn btn-danger' %>
        </div>
          <% end  %>
      <% else %>
         <h2 class="text-align-center"> <%= "Vous n'avez pas effectué de réservations" %> </h2>
      <% end  %>
 </div>

