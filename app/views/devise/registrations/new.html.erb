<div class="container mt-3 col-6">

  <h2>S'inscrire</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  label: "Prénom",
                  input_html: { autocomplete: "first_name" } %>
      <%= f.input :last_name,
                  required: true,
                  autofocus: false,
                  label: "Nom",
                  input_html: { autocomplete: "last_name" } %>
      <%= f.input :phone_number,
                  required: true,
                  autofocus: false,
                  label: "Numéro de téléphone",
                  input_html: { autocomplete: "phone_number" } %>
      <%= f.input :email,
                  required: true,
                  autofocus: false,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  label: "Mot de passe",
                  hint: ("#{@minimum_password_length} caractères au minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: "Confirmation du mot de passe",
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="row">
      <div class="form-actions">
        <%= f.button :submit, "S'inscrire", class: 'btn btn-primary mx-3' %>
      </div>
    <% end %>

    </div>

    <div class="alternative-actions mt-3">
      <p> <strong>Autres actions</strong> </p>
      <em> <%= render "devise/shared/links" %></em>
    </div>

</div>
