

<div class="container mt-3 col-6">

  <h2>Se connecter</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: false,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="row">
        <div class="form-actions">
          <%= f.button :submit, "Se connecter", class: 'btn btn-dark mx-3' %>
        </div>
      <% end %>

  </div>

    <div class="alternative-actions mt-3">
      <p> <strong>Autres actions</strong> </p>
      <em> <%= render "devise/shared/links" %></em>
    </div>

</div>


