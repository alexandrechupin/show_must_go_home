<div class="container mt-5">
  <!-- Search form -->
  <%= render 'search-bar' %>
  <hr>
  <div class="form-inline">
    <input class="form-control mr-sm-2 datepicker" name="query" type="search" placeholder="Date" aria-label="Search" value="<%= params[:query] %>">
    <div class="form-group">
      <select class="form-control" id="exampleFormControlSelect1">
        <option>Type de lieu</option>
        <option>salon</option>
        <option>loft</option>
        <option>jardin</option>
        <option>terrasse</option>
        <option>grange</option>
        <option>bureau</option>
      </select>
    </div><br>

    <div class="form-group pl-2">
      <select class="form-control" id="exampleFormControlSelect1">
        <option>Nombre de personnes</option>
        <option>0-15 personnes</option>
        <option>15-30 personnes</option>
        <option>30+</option>
      </select>
    </div>

    <div class="form-group pl-2">
      <select class="form-control" id="exampleFormControlSelect1">
        <option>Type d'évènement</option>
        <option>tous concerts</option>
        <option>événements classique</option>
        <option>événements folk</option>
        <option>événements jazz</option>
        <option>événements pop/rock</option>
        <option>lectures</option>
        <option>événements festifs</option>
      </select>
    </div>

    <div class="form-group pl-2">
      <div>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">Equipements</a>
      </div>
    </div>
  </div>
  <div class="collapse mt-3" id="collapseExample">
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
      <label class="form-check-label" for="inlineCheckbox1">piano droit</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
      <label class="form-check-label" for="inlineCheckbox2">piano à queue</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
      <label class="form-check-label" for="inlineCheckbox2">ascenseur</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
      <label class="form-check-label" for="inlineCheckbox2">arrivée électrique</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
      <label class="form-check-label" for="inlineCheckbox2">chaises pliantes</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
      <label class="form-check-label" for="inlineCheckbox2">chaises fixes</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
      <label class="form-check-label" for="inlineCheckbox2">coussins</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
      <label class="form-check-label" for="inlineCheckbox2">tables</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
      <label class="form-check-label" for="inlineCheckbox2">verres</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
      <label class="form-check-label" for="inlineCheckbox2">cafetière</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
      <label class="form-check-label" for="inlineCheckbox2">bouilloire</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
      <label class="form-check-label" for="inlineCheckbox2">réfrigérateur</label>
    </div>
  </div>
  <hr>

  <div class="row">

    <div class="flat-cards name-flat col-8">
      <% @spaces.each do |space| %>
        <div class="card-trip">
          <%= cl_image_tag space.photo.url %>
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to space.name, space_path(space) %></h2>
              <p><%= space.description %></p>
            </div>
            <%= cl_image_tag space.photo.url, class:"card-trip-user avatar-bordered" %>
          </div>
        </div>
      <% end %>
    </div>


    <div
      id="map"
      class="col-4"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>

</div>





