<%= cl_image_tag @space.photo, height: 300, width: 400, crop: :fill %>


<div class="container w-50">

  <h3><%= @space.name  %></h3>
    <div class="space-description">
      <div class="space-details">
        <h4> <%= @space.street %></h4>
        <h4> <%= @space.equipment  %></h4>
        <hr>
      </div>
    </div>
      <p> <%= @space.description %> </p>
      <p> <%= @space.policy %></p>

    <div class="booking-form">
      <h3>Book your flat!</h3>
      <% unless user_signed_in? %>
      <p>You must be logged in to book this space!</p>
      <%= link_to "Login", new_user_session_path, class: "btn btn-dark" %>

      <% else %>
        <%= simple_form_for [@space, @booking] do |f| %>
          <%= f.input :event_type, label: "Type d'événement", collection: Space::EVENTTYPE %>
          <%= f.input :date, as: :date, label: "Date" %>
          <%= f.input :time, as: :time, label: "Heure" %>
          <%= f.input :duration, label: "Durée en heures" %>
          <%= f.input :description, label: "Description" %>
          <%= f.input :number_of_guests, label: "Nombre d'invités" %>
          <%= f.submit "Je réserve cet espace", class: "btn btn-success" %>
        <% end %>
      <% end %>
    </div>
  </div>

<p> <%= link_to 'Back to list', spaces_path %> </p>
